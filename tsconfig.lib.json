{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@lib/*": ["./src/*"],
    }
  },
  "include": [
    "compiler.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.ce.vue",
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
